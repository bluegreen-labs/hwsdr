citHeader("To cite hwsdr in publications use:")

citEntry(
  entry = "Misc",
  title = "The hwsdr package: an interface to ORNL DAAC HWSD API endpoints",
  author = c(as.person("Koen Hufkens")),
  year = "2021",
  url = "https://bluegreen-labs.github.io/hwsdr/",
  textVersion  =
   paste("Hufkens (2021).",
      "The hwsdr package: an interface to ORNL DAAC HWSD API endpoints")
)
